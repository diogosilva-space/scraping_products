# ========================================
# CONFIGURAÇÕES DA API DJOB.COM.BR
# ========================================

# Credenciais de acesso
DJOB_USERNAME=seu_email@exemplo.com
DJOB_PASSWORD=sua_senha_aqui
DJOB_API_KEY=sua_chave_api_aqui

# URL da API (opcional - usa padrão se não configurado)
DJOB_API_BASE_URL=https://api.djob.com.br/wp-json/api/v1

# Configurações de timeout e retry
DJOB_API_TIMEOUT=30000
DJOB_API_MAX_RETRIES=3
DJOB_API_RETRY_DELAY=1000

# Configurações de rate limiting
DJOB_API_RATE_LIMIT=60
DJOB_API_REQUEST_DELAY=1000

# ========================================
# CONFIGURAÇÕES DE SINCRONIZAÇÃO
# ========================================

# Sincronização automática após scraping
DJOB_AUTO_SYNC=true
DJOB_SYNC_AFTER_SCRAPING=true
DJOB_SYNC_EXISTING=true

# Configurações de lote
DJOB_BATCH_SIZE=10
DJOB_BATCH_DELAY=2000
DJOB_CONTINUE_ON_ERROR=true

# Validação de produtos
DJOB_VALIDATE_BEFORE_SYNC=true
DJOB_SKIP_INVALID=false

# ========================================
# CONFIGURAÇÕES DE PRODUTOS
# ========================================

# Validações específicas
DJOB_MIN_PRICE=0
DJOB_MAX_NAME_LENGTH=255
DJOB_MAX_DESCRIPTION_LENGTH=1000

# ========================================
# CONFIGURAÇÕES DE LOG
# ========================================

DJOB_LOG_LEVEL=info
DJOB_LOG_REQUESTS=true
DJOB_LOG_RESPONSES=false
DJOB_DETAILED_ERRORS=true

# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ========================================

# Modo de teste (não envia dados reais)
DJOB_TEST_MODE=false

# Simular respostas da API
DJOB_MOCK_RESPONSES=false

# Delay artificial para simular latência
DJOB_ARTIFICIAL_DELAY=0

# ========================================
# INSTRUÇÕES
# ========================================

# 1. Copie este arquivo para .env
# 2. Configure suas credenciais reais
# 3. Ajuste as configurações conforme necessário
# 4. NUNCA commite o arquivo .env no git
# 5. Mantenha o env.example atualizado
